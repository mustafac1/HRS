@model HRS.ViewModel.AppointmentViewModel
@{
    ViewData["Title"] = "Doktor Randevu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom red-bg page-heading">
    <div class="col-lg-10">
        <h2>Randevu Tanımlama Sayfası</h2>
        <ol class="breadcrumb red-bg">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index","Home")">Anasayfa</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Randevu Tanımla</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">

        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Randevu Tanımlama Formu</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm("Add", "Appointment"))
                    {
                        <div class="form-group row">
                            <div class="col-sm-12">
                                <select class="form-control m-b" data-val="true" data-val-required="The RoleId field is required." name="DoctorId">
                                    <option>-----Doktor Seçiniz-----</option>
                                    @foreach (var item in Model.GetDoctors)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row text-center">
                            <div class="col-sm-12">
                                @foreach (var item in Model.GetTimes)
                                {
                                    <label> <input type="checkbox" value="@item.Id" id="inlineCheckbox1" name="TimeId"> @item.StartTime - @item.EndTime </label>
                                }
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="col-sm-4 col-sm-offset-2">
                            <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-floppy-o"></i> Kaydet</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>